extends /layout/system
block meta
	link(rel="stylesheet" href="/css/pages/system/login.css")

block main
	form.form-signin(role='form' action="/login" method="post")
		h1.h3.mb-3.font-weight-normal Please sign in
		div.form-group
			label.sr-only(for="inputEmail") Username
			input.form-control(type="text" name="username" placeholder="Username" required autofocus)
			label.sr-only(for="inputPassword") Password
			input.form-control(type="password" name="password" placeholder="Password" required)
		button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in